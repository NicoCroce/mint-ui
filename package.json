{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint './packages/**/*.{ts,tsx}'",
    "lint:fix": "eslint './packages/**/*.{ts,tsx}' --fix",
    "dev": "start-storybook -p 5555",
    "coverage": "jest --coverage",
    "unit": "jest",
    "prebundle": "yarn run lint:fix && lerna exec --parallel -- rm -rf dist",
    "bundle": "yarn run prebundle && lerna exec --parallel -- tsc -p ./tsconfig.json",
    "copy": "lerna exec --parallel -- cp README.MD package.json dist/",
    "prepublishOnly": "yarn run bundle && yarn run copy"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint:fix"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@storybook/addon-a11y": "^5.2.1",
    "@storybook/addon-actions": "^5.2.1",
    "@storybook/addon-console": "^1.2.1",
    "@storybook/addon-info": "^5.2.1",
    "@storybook/addon-notes": "^5.2.1",
    "@storybook/addon-storyshots": "^5.2.1",
    "@storybook/addon-viewport": "^5.2.1",
    "@storybook/react": "^5.2.1",
    "@testing-library/react": "^9.2.0",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.133",
    "@types/node": "12.6.8",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "@types/react-test-renderer": "^16.9.0",
    "@types/storybook__addon-info": "^4.1.2",
    "@types/storybook__react": "^4.0.2",
    "@types/styled-components": "4.1.16",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-macros": "^2.6.1",
    "babel-plugin-styled-components": "^1.10.6",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "husky": "^2.3.0",
    "jest": "^24.9.0",
    "jest-haste-map": "^24.9.0",
    "jest-resolve": "^24.9.0",
    "jest-styled-components": "^6.3.3",
    "lerna": "^3.16.4",
    "lodash": "4.17.14",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-docgen-typescript-loader": "^3.2.1",
    "react-dom": "^16.9.0",
    "react-hooks-testing-library": "^0.5.1",
    "react-test-renderer": "^16.10.1",
    "require-context.macro": "^1.2.1",
    "styled-components": "^4.4.0",
    "ts-jest": "^24.1.0",
    "typescript": "3.5.3",
    "webpack": "^4.41.0"
  }
}